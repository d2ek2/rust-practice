{
    "name": "Rust Development",
    "dockerComposeFile": "../compose.yaml",
    "service": "rust",
    "workspaceFolder": "/workspace",
    "customizations": {
        "vscode": {
            "extensions": [
                "rust-lang.rust-analyzer",
                "vadimcn.vscode-lldb",
                "tamasfe.even-better-toml",
                "serayuzgur.crates",
                "GitHub.copilot"
            ],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "/bin/bash"
                    }
                },
                "[rust]": {
                    "editor.formatOnSave": true,
                    "editor.defaultFormatter": "rust-lang.rust-analyzer"
                },
                "rust-analyzer.checkOnSave.command": "clippy",
                "rust-analyzer.cargo.allFeatures": true,
                "rust-analyzer.procMacro.enable": true,
                "rust-analyzer.check.command": "clippy",
                "rust-analyzer.check.allTargets": true,
                "rust-analyzer.linkedProjects": [
                    "./Cargo.toml"
                ],
                "rust-analyzer.rootIndicationFileNames": [
                    "Cargo.toml",
                    "rust-toolchain.toml"
                ],
                "rust-analyzer.cargo.buildScripts.enable": true,
                "rust-analyzer.diagnostics.enable": true,
                "rust-analyzer.hover.documentation": true,
                "rust-analyzer.inlayHints.enable": true,
                "rust-analyzer.lens.enable": true
            }
        }
    },
    "remoteUser": "rustdev",
    "postCreateCommand": "rustup component add rust-src rustfmt clippy rust-analyzer",
    "postStartCommand": "cargo check",
    "mounts": [
        "source=${localWorkspaceFolder}/target,target=/workspace/target,type=volume"
    ],
    "remoteEnv": {
        "RUST_BACKTRACE": "1"
    }
}